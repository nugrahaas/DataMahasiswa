<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorKrem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormTambah">

    <LinearLayout
        android:id="@+id/ll_nomor"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor"
            />
        <EditText
            android:id="@+id/et_nomor"
            android:inputType="number"
            android:hint="Nomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_nomor"
        android:id="@+id/ll_nama"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            />
        <EditText
            android:id="@+id/et_nama"
            android:hint="Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_nama"
        android:id="@+id/ll_tgl_lahir"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            />
        <EditText
            android:id="@+id/et_tanggal"
            android:inputType="date"
            android:hint="20/12/2001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_tgl_lahir"
        android:id="@+id/ll_jenkel"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            />
        <EditText
            android:id="@+id/et_jk"
            android:hint="L/P"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_jenkel"
        android:id="@+id/ll_alamat"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:id="@+id/et_alamat"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            />

    </LinearLayout>

    <ImageButton
        android:onClick="simpanData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/tv_input"
        android:background="@color/colorKrem"
        android:src="@drawable/ic_save_black_24dp" />

    <TextView
        android:onClick="simpanData"
        android:id="@+id/tv_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="SIMPAN"
        android:textColor="#B22222"
        android:textSize="20dp" />

</RelativeLayout>