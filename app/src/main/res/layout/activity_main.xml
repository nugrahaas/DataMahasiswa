<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorKrem"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/student1"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn_lihat_data"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:onClick="lihatData"
        android:id="@+id/btn_lihat_data"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <ImageButton

            android:onClick="lihatData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_archive_black_24dp"
            android:background="@drawable/stylebutton1"
            />
        <Button
            android:onClick="lihatData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LIHAT DATA"
            android:textColor="#fff"
            android:textSize="15dp"
            android:background="@drawable/stylebutton1"
            />


    </LinearLayout>
    <LinearLayout
        android:onClick="inputData"
        android:layout_width="200dp"
        android:id="@+id/btn_input_data"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn_lihat_data"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageButton
            android:onClick="inputData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_box_black_24dp"
            android:background="@drawable/stylebutton2"
            />
        <Button
            android:onClick="inputData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="INPUT DATA"
            android:textColor="#fff"
            android:textSize="15dp"
            android:background="@drawable/stylebutton2"
            />


    </LinearLayout>
    <LinearLayout
        android:onClick="informasi"
        android:id="@+id/btn_informasi"
        android:layout_below="@id/btn_input_data"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:onClick="informasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_black_24dp"
            android:background="@drawable/stylebutton3"
            />
        <Button
            android:onClick="informasi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="INFORMASI"
            android:textColor="#fff"
            android:textSize="15dp"
            android:background="@drawable/stylebutton3"
            />


    </LinearLayout>

</RelativeLayout>